
<p>
Trakkor is currently running <%= Tracker.count %> trackers,
comprising <%= Piece.count %> number of pieces.
</p>

<h3>Trackers (<%= ( @trackers || []).length %>)</h3>
<table>
  <tr>
    <th>Errors</th>
    <th>Name</th>
    <th>Id</th>
    <th>Sick</th>
    <th>#Pieces</th>
    <th>Last Err</th>
    <th>Hook</th>
  </tr>
  <% for t in @trackers %>
    <tr>
    <td>  <%= t.error_count > 0 ? t.error_count : '' %> </td>
    <td> <%= link_to(t.name.truncate(50), t) %></td>
    <td><%= t.id %></td>
    <td>  <%= t.sick? ? 'sick' : '' %> </td>
    <td><%= t.pieces_count %></td>
    <td><%= t.last_error %></td>
    <td>  <%= t.web_hook %> </td>
  </tr>
<% end %>
</table>

